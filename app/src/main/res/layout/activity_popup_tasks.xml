<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:filterTouchesWhenObscured="false"
    android:orientation="vertical"
    tools:context=".task"
    tools:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10sp">

        <TextView
            android:id="@+id/executor"
            android:layout_width="587dp"
            android:layout_height="match_parent"

            android:layout_marginBottom="10dp"
            android:hint="შემსრულებელი"
            android:textColor="#000"
            android:textSize="13sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10sp">


        <TextView
            android:id="@+id/task"
            android:layout_width="576dp"
            android:layout_height="match_parent"

            android:layout_marginBottom="10dp"
            android:hint="დავალების სათაური"
            android:textColor="#000"
            android:textSize="13sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10sp">


        <TextView
            android:id="@+id/taskDescription"
            android:layout_width="590dp"
            android:layout_height="141dp"
            android:layout_marginBottom="10dp"
            android:hint="დავალების აღწერა"
            android:textColor="#000"
            android:textSize="13sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10sp">


        <TextView
            android:id="@+id/comment"
            android:layout_width="583dp"
            android:layout_height="112dp"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="10dp"
            android:hint="კომენტარი"
            android:textColor="#000"
            android:textSize="13sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="10sp">


        <LinearLayout
            android:id="@+id/tex"
            android:layout_width="586dp"
            android:layout_height="36dp"

            android:layout_marginRight="1dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="საწყისი თარიღი:"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/txt_date1"
                android:layout_width="83dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:hint="დავალების აღწერა"
                android:text="2000-1-14"
                android:textColor="#000"
                android:textSize="15sp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="10sp">


        <LinearLayout
            android:layout_width="583dp"
            android:layout_height="36dp"

            android:layout_marginRight="1dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="საბოლოო თარიღი :"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/txt_date2"
                android:layout_width="83dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:text="2000-1-14"
                android:textColor="#000"
                android:textSize="15sp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>